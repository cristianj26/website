<BaseLayout title="Cristian Joe — Blog">
  <section class="blog-grid-section">
    <div class="blog-grid">
      {posts.map((post) => (
        <a
          href={post.url}
          target={post.external ? "_blank" : "_self"}
          rel={post.external ? "noopener" : ""}
          class="blog-card"
        >
          <div class="blog-card-image">
            <img src={post.image} alt={post.title} loading="lazy" />
          </div>
          <div class="blog-card-content">
            <p class="blog-card-date">{post.date}</p>
            <h2 class="blog-card-title">
              {post.title}{post.external ? " →" : ""}
            </h2>
          </div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .blog-grid-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 40px;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .blog-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .blog-card-image {
    aspect-ratio: 3 / 4;
    overflow: hidden;
    margin-bottom: 20px;
    background-color: #f5f5f5;
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .blog-card:hover .blog-card-image img {
    transform: scale(1.02);
    opacity: 0.9;
  }

  .blog-card-date {
    font-size: 0.875rem;
    color: #40E0D0;
    font-weight: 500;
    margin-bottom: 8px;
  }

  .blog-card-title {
    font-family: "Georgia", serif;
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1.4;
    color: var(--color-text);
  }

  .blog-card:hover .blog-card-title {
    color: var(--color-text-secondary);
  }

  @media (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }

  @media (max-width: 640px) {
    .blog-grid-section {
      padding: 40px 20px;
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }
</style>
