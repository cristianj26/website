---

<BaseLayout title="Investments â€” Cristian Joe">
  <section class="container">
    <div class="page-header">
      <h1>Investments</h1>
    </div>

    <div class="investment-grid">
      {investments.map((investment) => (
        <a href={investment.url} target="_blank" rel="noopener" class="investment-card fade-in">
          <div class="investment-image">
            <img src={investment.image} alt={investment.name} loading="lazy" />
          </div>
          <h3>{investment.name}</h3>
          <p>{investment.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  /* Page Header: Serif Font & Visual Hierarchy */
  .page-header {
    margin-bottom: 20px;
    text-align: left;
  }

  .page-header h1 {
    font-family: "Georgia", serif;
    font-size: 2.5rem;
    text-transform: none;
    letter-spacing: normal;
    font-weight: 400;
    color: var(--color-text-secondary);
  }

  .investment-grid {
    margin-top: 0;
  }

  .investment-card {
    display: block;
    text-decoration: none;
    color: inherit;
    text-align: left;
    position: relative;
    overflow: hidden;
  }

  .investment-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      105deg,
      transparent 40%,
      rgba(255, 255, 255, 0.4) 50%,
      transparent 60%
    );
    transform: translateX(-100%);
    transition: transform 1.6s ease-in-out;
    pointer-events: none;
    z-index: 1;
  }

  .investment-card:hover::before {
    transform: translateX(100%);
  }

  .investment-image {
    margin-bottom: 20px;
    overflow: hidden;
    background-color: #E4E3DF;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .investment-image::after {
    content: "";
    position: absolute;
    inset: 0;
    background-color: #E4E3DF;
    opacity: 0.3;
    pointer-events: none;
    mix-blend-mode: color;
  }

  .investment-image img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    transition: opacity 0.2s ease;
  }

  .investment-image img[src$=".svg"] {
    object-fit: contain;
    padding: 25%;
  }

  .investment-image img[src$=".png"] {
    object-fit: contain;
    padding: 25%;
  }

  .investment-image img[src*="prometheus"] {
    object-fit: contain;
    padding: 6%;
  }


  .investment-card h3 {
    color: var(--color-text);
    font-size: 1.125rem;
    font-weight: 600;
    text-transform: none;
    letter-spacing: 0.01em;
    margin-bottom: 10px;
  }


  .investment-card p {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  /* Fade-in animation */
  .fade-in {
    opacity: 0;
    transition: opacity 0.6s ease;
  }

  .fade-in.visible {
    opacity: 1;
  }

  /* Fallback for no-JS */
  @media (scripting: none) {
    .fade-in {
      opacity: 1;
    }
  }
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.fade-in').forEach((el) => observer.observe(el));
</script>
