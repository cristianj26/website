    line-height: 1.8;
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

